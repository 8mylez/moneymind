template(name='signUp')
  .container
    .row
      .col-xs-12.col-md-6.col-md-offset-3
        .content-block
          .content
            form#sign-up-form(data-id='sign-up-form')
              .page-header Registrieren
              label(for='email') Email
              input#email.input(type='email' placeholder="Email" autofocus='true' data-id='email')
              label(for='password') Passwort
              input#password.input(type='password' placeholder="Passwort" data-id='password')
              label(for='password-confirmation') Passwort wiederholen
              input#password-confirmation.input(type='password' placeholder="Passwort wiederholen" data-id='password-confirmation')
              .actions
                input.button.button-primary(type='submit' value="Registrieren")
                a.button.pull-right(href="{{pathFor 'signIn'}}") Login
